{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
        "useExhaustiveDependencies": "warn",
				"noUnusedVariables": "error",
				"noUnusedImports": "error"
			}
		}
	},
	"json": { "formatter": { "enabled": false } },
	"formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
	"files": {
		"ignore": [
			"src/tailwindcss.css",
			"public/mockServiceWorker.js",
			"src/generated/**/*.tsx",
			"src/generated/**/*.ts",
			"dist"
		]
	}
}
